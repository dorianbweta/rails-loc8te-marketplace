<div class="navbar-container">
  <div class="logo">
  <%= link_to root_path do %>
    <%= image_tag "logo-white.png", alt: "Logo", class:"logo" %>
  <% end %>
  </div>
    <div class="navbar">
      <ul class="nav-links">
        <li>
        <%= link_to root_path %>
        <% if user_signed_in? %>
          <%= link_to "My bookings", bookings_path, class:"nav-links"%>
        <% end %>
        </li>
        <li>
        <%= link_to "Vehicles", vehicles_path, class:"nav-links"%>
        </li>
        <li>
        <%= link_to "Submit your Vehicle", new_vehicle_path, class:"nav-links"%>
        </li>
      </ul>

      <div class="nav-divider my-3"></div>
      <% if user_signed_in? %>
        <%=link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class:"button-primary"%>
      <% else %>
        <%= link_to "/users/sign_in", class: "button-primary" do %>
        Log in
        <% end %>
      <% end %>
    </div>
</div>
