<div class="container">

  <div class="row">
    <div class="col-8">
      <%= image_tag "https://res.cloudinary.com/dusf3yrhs/image/upload/v1685515199/upjek5ki6bet05xxgtfp.jpg", class: "main-car "%>
    </div>
    <div class="col-4">
      <%= image_tag "https://res.cloudinary.com/dusf3yrhs/image/upload/v1685515343/yz2prfacwo0ubjhkm3x4.jpg", class: "top-car " %>
        <%= image_tag "https://res.cloudinary.com/dusf3yrhs/image/upload/v1685515266/b8tux5ufeuztuzdd5ppg.jpg", class: "bottom-car " %>
    </div>
  </div>

  <hr>

  <h3> Find below all the information about this vehicle </h2>
  <p>
    This <strong style="color: orange"><%= @vehicle.model.capitalize %></strong> is offered for rent by <strong style="color: orange"><%= @vehicle.business.organisation_name %></strong>
  </p>
  <div class="d-flex align-items-center justify-content-between">
    <div class="d-flex flex-row align-items-center">
      <i class="fa-solid fa-car" style="color: $dark-blue"></i>
      <span>Category: <%= @vehicle.category %></span>
    </div>
    <div class="d-flex align-items-center justify-content-between">
      <i class="fa-solid fa-id-card" style="color: $dark-blue"></i>
      <span>  Driver: <%= @vehicle.driver_name %></span>
    </div>
    <div class="d-flex align-items-center justify-content-between">
      <i class="fa-solid fa-money-bill" style="color: $dark-blue"></i>
      <span>  Price: <%= @vehicle.base_price%></span>
    </div>
  </div>

  <hr>

  <div class="d-flex align-items-center justify-content-between mt-3 mb-3">
    <%= link_to "See all vehicles", vehicles_path, class: "button-primary" %>
    <%= link_to "Book now", '#', class: "button-primary" %>
    <%= link_to "Delete",
        '#',
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
        class: "button-primary"
    %>
  </div>

</div>
