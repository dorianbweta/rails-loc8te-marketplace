<div class="navbar-container">
  <div class="logo">
    <%= link_to root_path do %>
      <img class="logo" src="https://i.imgur.com/uU7W34t.png" alt="LOC8TE logo">
    <% end %>
  </div>
    <div class="navbar">
      <ul class="nav-links">
        <li>
        <%= link_to "Vehicles", vehicles_path, class:"nav-links"%>
        </li>
        <li>
        <%= link_to "Submit your Vehicle", new_vehicle_path, class:"nav-links"%>
        </li>
      </ul>
      <%= link_to "Sign up", new_user_registration_path, class: "button-primary" %>
    </div>
</div>

<div class="d-flex align-items-center justify-content-center my-3">
  <h1>Vehicles currently Available</h1>
</div>

<div class="cards">
    <% @vehicles.each do |vehicle| %>
        <div class="cards-container">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1661281812258-129793403c61?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1172&q=80')">
            </div>
          <li>
          <div class="card-description my-2">
            <h2><%= vehicle.model %></h2>
          </div>

          <div class="card-description d-flex">
            <p><%= vehicle.category %></p>
          </div>

          <div class="card-description">
            <p>Starting Price: </p> <h2><%= vehicle.base_price %></h2>
          </div>
          </li>
        </div>
    <% end %>
</div>
